<div class="form-row">
    <div class="form-group col required">
        <label for="batSpec">Battery Specs</label>
         <input list="batSpec" name="batSpec" class="form-control" required>
         <datalist id="batSpec">
             {{#each values.batteries.specs}}
                <option value={{this.batSpec}}>{{this.spec}}</option>
            {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="carBrand">Car Brand</label>
         <input list="carBrand" name="carBrand" class="form-control" required>
         <datalist id="carBrand">
             {{#each values.batteries.brands}}
                <option value={{this.carBrand}}>{{this.spec}}</option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row required">
    <div class="form-group col required">
        <label for="carBrand">Car Year</label>
         <input list="carYear" name="carYear" class="form-control" required>
         <datalist id="carYear">
             {{#each values.batteries.years}}
                <option value={{this.carYear}}>{{this.spec}}</option>
            {{/each}}
        </datalist>
    </div>
    <div class="for-group col required">
        <label for="quantity">Quantity</label>
        <input type="number" placeholder = "0" id="quantity" name="quantity" class="form-control" required>
    </div>
</div>    