<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category</th>
                <th scope="col">Car Brand</th>
                <th scope="col">Car Year</th>
                <th scope="col">Chassis #</th>
                <th scope="col">Battery Brand</th>
                <th scope="col">Quantity (Boxes)</th>
                {{#if (isdefined page "view")}}
                <th scope="col">Single Cost</th>
                <th scope="col">Total Cost</th>
                {{/if}}
                {{#if (isdefined page "add")}}
                <th scope"col">Actoin</th>
                {{/if}}
                
            </tr>
        </thead>
        <tbody>
            {{#if (isdefined page "view")}}
            {{#each consumables}}
                <tr>
                    <th>{{counter @index}}</th>
                    <td>{{this.category}}</th>
                    <td>{{this.carBrand}}</td>
                    <td>{{this.carYear}}</td>
                    <td>{{this.chassis}}</td>
                    <td>{{this.bBrand}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.singleCost}}</td>
                    <td>{{this.totalCosr}}</td>
                </tr>
            {{/each}}
            {{/if}}

             {{#if (isdefined page "add")}}
                {{#each values.brakes.consumable}}
                <tr>
                   <th>{{counter @index}}</th>
                    <td>{{this.category}}</th>
                    <td>{{this.carBrand}}</td>
                    <td>{{this.carYear}}</td>
                    <td>{{this.chassis}}</td>
                    <td>{{this.bBrand}}</td>
                    <td>{{this.quantity}}</td>
                    <td class = "table-actions">
                        <div class="input-group">
                            <input type="number" id="tableBrakeQuantity-{{this.id}}" name="tableBrakeQuantity-{{this.id}}" class="form-control" placeholder="Quantity" aria-label="Quantity" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <a href="#" onclick="updateBrake({{this.id}})" class="btn btn-primary" role="button"  id="updateBrake-{{this.id}}"><i class="fas fa-plus-circle"></i></a>
                            </div>
                        </div>
                    </td>  
                </tr>
                {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>

<script>
    function getQuantity(id){
        return document.getElementById("tableQuantity-" + id).value
    }
    function updateBrake(id){
        return document.getElementById("updateBrake-" + id).href = "update-brake/" + id + "/" + document.getElementById("tableBrakeQuantity-" + id).value;
    }
</script>