<div class="col-md-12">
    <table id="batteries-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category</th>
                <th scope="col">Filter Type</th>
                <th scope="col">Filter Brand</th>
                <th scope="col">Car Brand</th>
                <th scope="col">Car Model</th>
                <th scope="col">Car Year</th>
                <th scope="col">Quantity (Boxes)</th>
                 {{#if (isdefined page "add")}}
                <th scope="col">Action</th>
                 {{/if}}
                 {{#if (isdefined page "view")}}
                <th scope="col">Single Cost</th>
                <th scope="col">Total Cost</th>
                {{/if}}
                
            </tr>
        </thead>
        <tbody>
            {{#if (isdefined page "view")}}
            {{#each consumables}}
                <tr>
                    <th>{{counter @index}}</th>
                    <td>{{this.category}}</td>
                    <td>{{this.fType}}</td>
                    <td>{{this.actualBrand}}</td>
                    <td>{{this.carModel}}</td>
                    <td>{{this.carBrand}}</td>
                    <td>{{this.carYear}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.singleCost}}</td>
                    <td>{{this.totalCost}}</td>
                </tr>
            {{/each}}
            {{/if}}

            {{#if (isdefined page "add")}}
            {{#each values.filters.consumable}}
                <tr>
                    <th>{{counter @index}}</th>
                    <td>{{this.category}}</td>
                    <td>{{this.fType}}</td>
                    <td>{{this.actualBrand}}</td>
                    <td>{{this.carBrand}}</td>
                    <td>{{this.carModel}}</td>
                    <td>{{this.carYear}}</td>
                    <td>{{this.quantity}}</td>
                    <td class = "table-actions">
                        <div class="input-group">
                            <input type="number" id="tableFilterQuantity-{{this.id}}" name="tableFilterQuantity-{{this.id}}" class="form-control" placeholder="Quantity" aria-label="Quantity" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button type="submit" id="updateFilter-{{this.id}}" name="updateFilter-{{this.id}}" class="btn btn-primary" onclick="updateFilterPost({{this.id}})"><i class="fas fa-plus-circle"></i></button>
                            </div>
                        </div>
                    </td>  
                </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>

<script>
    function updateFilterPost(id){
        document.getElementById("tableFilterQuantity-" + id).name = "newQuantity";
        document.getElementById("mainForm").action = "update-filter/" + id;
    }
</script>