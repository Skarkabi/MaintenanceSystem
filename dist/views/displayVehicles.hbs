<div class="col-md-12">
    <div class="table-buttons" id="table-buttons">
        <a href="/vehicles/add" role="button" class="btn btn-outline-dark" id="create-new"><i class="fas fa-plus"></i>  Add New Vehicle</a>
    </div>
</div>
{{!-- Displays all users --}}
<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" style="width:15%">Category</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Plate#</th>
                <th scope="col">Chassis#</th>
                <th scope="col">Driven</th>
                <th scope="col">Change</th>
                <th scope="col" style="width:10%">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}" id="vehicle-{{counter @index}}"> {{counter @index}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.category}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.brand}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.model}}</a></td>
                     <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.year}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.plate}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.chassis}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.kmDriven}}</a></td>
                    <td><a href="/vehicles/display-vehicle/{{this.plate}}">{{this.kmForOilChange}}</a></td>
                    
                    <td class = "table-actions">
                        <a href="/vehicles/delete/{{this.plate}}/{{this.chassis}}" id="deleteVehicleId-{{this.plate}}" class="delete" data-confirm="Are you sure to delete {{this.brand}} {{this.model}} With Plate # {{this.plate}}?"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
