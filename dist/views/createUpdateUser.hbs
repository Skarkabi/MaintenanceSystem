<div class="col-md-12">
    <form action="{{action}}" method="POST">
        {{!-- User Information --}}
        <div class="section-wrapper">
            <div class="section-title">
                <h4><i class="fas fa-user-alt"></i> User Information</h4>
                <hr class="my-3">
            </div>
            <div class="section-content">
                <div class="form-row">
                    <div class="form-group col required">
                        <label for="type">Employee ID</label>
                        {{#if isUpdate}}
                        <input type="text" value="{{existingUser.id}}" class="form-control" readonly>
                        {{else}}
                        <input type="text" placeholder = "Employee ID #" id="eID" name="eID" class="form-control" required>
                        {{/if}}
                    </div>
                    <div class="form-group col required">
                        <label for="firstName">First Name</label>
                        <input type="text" placeholder="First Name" id="firstName" name="firstName" class="form-control" value="{{existingUser.firstName}}" required>
                    </div>
                    <div class="form-group col required">
                        <label for="lastName">Last Name</label>
                        <input type="text" placeholder="Last Name" value="{{existingUser.lastName}}" id="lastName" name="lastName" class="form-control" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label for="username">Username</label>
                        <input type="text" placeholder="Username" id="username" name="username" class="form-control" required>
                    </div>
                     <div class="form-group col {{#unless isUpdate}}required{{/unless}}">
                        <label for="password">Password</label>
                        <input type="password" placeholder="{{#unless isUpdate}}Enter Password{{else}}Update Password{{/unless}}" id="password" name="password" class="form-control" {{#unless isUpdate}}required{{/unless}}>
                    </div>
                    <div class="form-group col">
                        <label for="showPassword" style="display: block;">Show Password</label>
                        <div onclick="showPass()" class="btn btn-light"><i class="far fa-eye" style="margin-right: 0px;"></i></div>
                    </div>
                </div>
            </div>
        </div>
        
        {{#if user.admin}}
        <div class="section-wrapper" id="userProgramInformation">
            <div class="section-title">
                <h4><i class="fas fa-user-graduate"></i> Program Information</h4>
                <hr class="my-3">
            </div>
            <div class="section-content">
                <div class="form-row">
                    <div class="form-group col required">
                        <label for="majorId">Major</label>
                        <select id="majorId" name="majorId" onchange="checkMajorMinorRequirements()" class="form-control">
                            {{#if existingUser.majorId}}
                            <option value="{{existexistingUseringValues.majorId}}" selected>{{existingUser.major}}</option>
                            {{else}}
                            <option disabled selected value="">Choose one</option>
                            {{/if}}
                            {{#each faculties}}
                            <option value="{{this._id}}">{{this.shortName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group col required">
                        <label for="minorId">Minor</label>
                        <select id="minorId" name="minorId" class="form-control" onchange="checkMajorMinorRequirements()">
                            {{#if existingUser.minorId}}
                            <option value="{{existingUser.minorId}}" selected>{{existingUser.minor}}</option>
                            {{else}}
                            <option disabled selected value="">Choose one</option>
                            {{/if}}
                            {{#each faculties}}
                            <option value="{{this._id}}">{{this.shortName}}</option>
                            {{/each}}
                            <option value="N/A">N/A</option>
                        </select>
                    </div>
                    
                </div>
            </div>
        </div>
        {{/if}}

        <button type="submit" id="submit" name="submit" class="btn btn-primary justfiy-content-end"><i class="far fa-save"></i> {{submitButtonText}}</button>
    </form>
</div>

<script>
    /**
    * Displays the password
    * Retrieved from https://www.w3schools.com/howto/howto_js_toggle_password.asp
    */
    function showPass()
    {
        let paswordField = document.getElementById("password");

        if (paswordField.type === "password")
        {
            paswordField.type = "text";
        }
        else
        {
            paswordField.type = "password";
        }
    }

    /**
    * Shows program information section if the user type is Student.
    */
    function showProgramInformation()
    {
        let userTypeConatiner = document.getElementById("type");
        let userType = userTypeConatiner ? userTypeConatiner.value : null;
        let userProgramInformation = document.getElementById("userProgramInformation");
        
        if (userType && userProgramInformation)
        {
            userProgramInformation.style.display = userType === "Student"
                ? "block"
                : "none";

            document.getElementById("majorId").required = userType === "Student";
            document.getElementById("minorId").required = userType === "Student";
        }
    }

    showProgramInformation()

    /**
    * Prevents selecting same minor and major.
    */
    function checkMajorMinorRequirements()
    {
        let minor = document.getElementById("minorId");
        let major = document.getElementById("majorId");

        if (major.value === minor.value)
        {
            alert("Major and Minor cannot be same!");
            minor.selectedIndex = 0;
        }
    }
</script>