<div class="form-row">
     <div class="form-group col required">
        <label for="oilSupplierName">Supplier Name</label>
         <select type="text" id="oilSupplierName" name="oilSupplierName" class="form-control" required="required">
             <option value ="" selected disabled>Choose One</option>
             {{#each values.supplier}}
                <option value="{{this.id}}">{{this.name}}</option>
             {{/each}}       
        </select>
    </div>
    <div class="form-group col required">
        <label for="preferredOilBrand">Oil Brand</label>
         <input list="preferredOilBrand" name="preferredOilBrand" class="form-control" required>
         <datalist id="preferredOilBrand">
             {{#each values.oil.preferredBrands}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row">
    <div class="form-group col required">
        <label for="oilType">Oil Type</label>
         <input list="oilType" name="oilType" class="form-control"  required>
         <datalist id="oilType">
             {{#each values.oil.typeOfOils}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="oilSpec">Oil Specs</label>
         <input list="oilSpec"  name="oilSpec" class="form-control" required>
         <datalist id="oilSpec">
            {{#each values.oil.specs}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row ">
     <div class="form-group col required">
        <label for="quantityOil">Quantity (L)</label>
        <input type="number" placeholder = "0" id="quantityOil" name="quantityOil" class="form-control"step="0.01" required onchange="getUnitPrice('oilBillPrice', 'quantityOil', 'oilPrice', false)">
    </div>
    <div class="form-group col required">
        <label for="quantityMinOil">Minimum Quantity (L)</label>
        <input type="number" placeholder = "0" id="quantityMinOil" name="quantityMinOil" class="form-control"step="0.01" required>
    </div>
</div>
<div class="form-row">
    <div class="for-group col required">
        <label for="oilBillPrice" >Total Price (VAT incl 5%)</label>
        <input type="number" placeholder = "0" id="oilBillPrice" name="oilBillPrice" class="form-control" step="0.01" required="required" onchange="getUnitPrice('oilBillPrice', 'quantityOil', 'oilPrice', true)">
    </div>
    <div class="for-group col required">
        <label for="oilPrice">Price Per Liter (VAT incl 5%)</label>
        <input type="number" placeholder = "0" id="oilPrice" name="oilPrice" class="form-control" step="0.01" readonly required>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <label for="quotation">Invoice Number</label>
        <input type="text" placeholder = "0" id="quotation" name="quotation" class="form-control">
    </div>
    <div class="form-group col">
        <label for="quotation">Select a File</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="upload" name="upload" accept="application/pdf, application/pdf">
            <label for="upload" class="custom-file-label">No File Choosen</label>
        </div>
    </div>
</div>
    