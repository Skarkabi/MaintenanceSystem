<div class="form-row">
    <div class="form-group col required">
        <label for="filterSupplierName">Supplier Name</label>
         <select type="text" id="filterSupplierName" name="filterSupplierName" class="form-control" required="required">
             <option value ="" selected disabled>Choose One</option>
             {{#each values.supplier}}
                <option value="{{this.id}}">{{this.name}}</option>
             {{/each}}       
        </select>
    </div>
    <div class="form-group col required">
        <label for="filterType">Filter Type</label>
         <input list="filterType"  name="filterType" class="form-control" required>
         <datalist id="filterType">
             {{#each values.filters.filterType}}
                 <option value="{{this}}"></option>
             {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="filterPlate">Vehicle Information</label>
        <input list="filterPlate" id="filterPlateValue" name="filterPlate" placeholder="Select Vehicle" class="form-control" onChange="setVehicleInfo('filter')" required>
        <datalist id="filterPlate">
            {{#each vehicles}}
               <option value="{{this.vehicleData}}" data-value="{{this.plate.plate}}"></option>
            {{/each}}
        </datalist>
        <input type="text" id="realPlateValue" name="realPlateValue" class="form-control" hidden>
    </div>
</div>
<div class="form-row">
    <div class="form-group col required">
        <label for="filterCategory">Vehicle Category</label>
        <select type="text" name="filterCategory" id ="filterCategory"  class="form-control" disabled required="required">
            <option value="" selected disabled></option>
                {{#each vehicles}}
                    <option value="{{this.plate.plate}}">{{this.plate.category}}</option>
                {{/each}}
                             
        </select>
    </div>
    <div class="form-group col required">
        <label for="filterCBrand">Vehicle Brand</label>
         <select type="text" id="filterCBrand"  name="filterCBrand" class="form-control" disabled required="required">
           <option value="" selected disabled></option>
            {{#each vehicles}}
                <option value="{{this.plate.plate}}">{{this.plate.brand}}</option>
            {{/each}}
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-group col required">
        <label for="filterCModel">Vehicle Model</label>
         <select type = "text" id="filterCModel"  name="filterCModel" class="form-control" disabled required="required">
            <option value="" selected disabled></option>
            {{#each vehicles}}
                <option value="{{this.plate.plate}}">{{this.plate.model}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group col required">
        <label for="filterCYear">Vehicle Year</label>
         <select type="text"  id="filterCYear" name="filterCYear" class="form-control" disabled required="required">
            <option value="" selected disabled></option>
            {{#each vehicles}}
                <option value="{{this.plate.plate}}">{{this.plate.year}}</option>
            {{/each}}
        </select>

    </div>
    <div class="form-group col required" style="display: none;">
        <label for="filterChassis">Car Chassis</label>
         <select type="text" id="filterChassis"  name="filterChassis" class="form-control" disabled required="required">
             <option value="" selected disabled></option>
            {{#each vehicles}}
                <option value="{{this.plate.plate}}">{{this.plate.chassis}}</option>
            {{/each}}
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-group col required">
        <label for="filterABrand">Actual Filter Brand</label>
         <input list="filterABrand"  name="filterABrand" class="form-control" required>
         <datalist id="filterABrand">
             {{#each values.filters.actualBrand}}
                 <option value="{{this}}"></option>
             {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="filterPBrand">Preferred Filter Brand</label>
        <input list="filterPBrand" name="filterPBrand" class="form-control" required>
        <datalist id="filterPBrand">
            {{#each values.filters.preferredBrand}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row">
    <div class="form-group col required">
        <label for="quantityFilters">Filter Quantity</label>
        <input type="number" id="quantityFilters" name="quantityFilters" class="form-control" onchange="getUnitPrice('filterBillPrice', 'quantityFilters', 'filterPrice', false)" required>
    </div>
     <div class="form-group col required">
        <label for="minFilterQuantity">Filter Minimum Quantity</label>
        <input type="number" id="minFilterQuantity" name="minFilterQuantity" class="form-control" required>
    </div>
</div>
<div class="form-row">
    <div class="for-group col required">
        <label for="filterBillPrice" >Total Price (VAT incl 5%)</label>
        <input type="number" placeholder = "0" id="filterBillPrice" name="filterBillPrice" class="form-control" step="0.01" required="required" onchange="getUnitPrice('filterBillPrice', 'quantityFilters', 'filterPrice', true)">
    </div>
    
    <div class="form-group col required">
        <label for="filterPrice">Filter Price Per Item (VAT incl 5%)</label>
        <input type="number" id="filterPrice" name="filterPrice" class="form-control" step="0.01"  onchange="getUnitPrice('filterBillPrice', 'quantityFilters', 'filterPrice', true)" readonly required>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <label for="quotation">Invoice Number</label>
        <input type="text" placeholder = "0" id="quotation" name="quotation" class="form-control">
    </div>
    <div class="form-group col">
        <label for="quotation">Select a File</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="upload" name="upload" accept="application/pdf, application/pdf">
            <label for="upload" class="custom-file-label">No File Choosen</label>
        </div>
    </div>
</div>
                    