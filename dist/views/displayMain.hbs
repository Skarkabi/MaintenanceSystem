    <body onload="setTable('material');">
    <div class="section-wrapper">
        <div class="section-title">
            <div class="row">
                <div class="col">
                    <h4><i class="fas fa-tools"></i>&nbsp;Job Details</h4>
                </div>
                    <div class="col"  style="font-weight:bold;">
                        <div class="row">
