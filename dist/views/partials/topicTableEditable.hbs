<div id = "Topics" style="margin: 20px auto;">
    <span style="margin: 5px auto auto 5px; font-size:24px; font-family: 'Nunito Sans', sans-serif;">Topics</span>
    <a href="/courses/{{courseInstance}}/create-project" class="btn btn-success"><i class="material-icons" style="position: absolute;">&#xE147;</i> <span style="margin: 0 0 0 30px;">Add</span></a>
</div>
{{#each topics}}
    <hr>
    <a href={{ this.filePath }}><h1>{{ this.title }}</h1></a>
    <div>
        <div>
            <span style="margin: 5px auto auto 5px; font-size:18px; font-family: 'Nunito Sans', sans-serif;">{{ this.dateOfCreation }}</span>
            <br>
            <span style="margin: 5px auto auto 5px; font-size:24px; font-family: 'Nunito Sans', sans-serif;">{{ this.description }}</span>
            {{!-- How can I go to create project with the topic selected already? --}}
            <br>
            {{!-- How can I go to edit a topic with the topic selected? --}}
            <a href="/courses/{{../courseInstance}}/project/:{{this._id}}" class="btn" style="background: #FFC107"><i class="material-icons" title="Edit" style="color: white; position:absolute">create</i> <span style="color: white; margin: 0 0 0 30px;">Edit</span></a>
            <a class="btn btn-danger" onclick='deleteElement("{{this._id}}", "{{this.title}}", "{{../courseInstance}}");'><i class="material-icons" style="position: absolute;">delete</i> <span style="margin: 0 0 0 30px;">Delete</span></a>
        </div>
        {{#each this.materials}}
            <div>
                {{#if this.isOwnLink}}
                    <a href={{this.link}} style="margin: auto auto auto 20px; vertical-align: middle"><i class="material-icons" style="cursor: pointer; vertical-align: middle;">{{this.fileType}}</i>{{this.title}}</a>
                {{else}}
                    <a href="/courses/{{../../courseInstance}}/project/:{{this._id}}" style="margin: auto auto auto 20px; vertical-align: middle"><i class="material-icons" style="cursor: pointer; vertical-align: middle;">{{this.fileType}}</i>{{this.title}}</a>
                {{/if}}
                {{!-- How can I go to edit a material with the topic selected already? --}}
                <a href="/courses/{{../../courseInstance}}/project/:{{this._id}}" style="vertical-align: middle"><i class="material-icons" style="color: #FFC107; cursor: pointer; vertical-align: middle;">create</i></a>
                <a onclick='deleteElement("{{this._id}}", "{{this.title}}", "{{../courseInstance}}");' style="vertical-align: middle"><i class="material-icons" style="color: #F44336; cursor: pointer; vertical-align: middle;">delete</i></a>
            </div>
        {{/each}}
    </div>
{{/each}}