<div class="col-md-12">
    <div class="table-buttons" id="table-buttons">
        <a href="/vehicles/add" role="button" class="btn btn-outline-dark" id="create-new"><i class="fas fa-plus"></i>  Add New Vehicle</a>
    </div>
</div>
{{!-- Displays all users --}}
<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Plate #</th>
                <th scope="col">Chassis #</th>
                <th scope="col">KM Driven</th>
                <th scope="col">KM Till Next Oil Change</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td><a href="/users/display-vehicle/{{this.plate}}" id="vehicle-{{counter @index}}"> {{counter @index}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.category}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.brand}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.model}}</a></td>
                     <td><a href="/users/display-vehicle/{{this.plate}}">{{this.year}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.plate}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.chassis}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.kmDriven}}</a></td>
                    <td><a href="/users/display-vehicle/{{this.plate}}">{{this.kmForOilChange}}</a></td>
                    
                    <td class = "table-actions">
                        <a href="/users/update/{{this._id}}" id="updateUser-{{this._id}}"><i class="far fa-edit"></i> Update </a>
                        <a href="/users/delete/{{this._id}}" id="deleteUserId-{{this._id}}" class="delete" data-confirm="Are you sure to delete {{this.firstName}} {{this.lastName}}?"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
