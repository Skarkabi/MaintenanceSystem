<div class="form-row">
    <div class="form-group col required">
        <label for="greaseSupplierName">Supplier Name</label>
         <select type="text" id="greaseSupplierName" name="greaseSupplierName" class="form-control" required="required">
             {{#each values.supplier}}
                <option value="{{this.id}}">{{this.name}}</option>
             {{/each}}       
        </select>
    </div>
    <div class="form-group col requiredl">
        <label for="greaseSpec">Grease Specs</label>
         <input list="greaseSpec"  name="greaseSpec" class="form-control" required>
         <datalist id="greaseSpec">
            {{#each values.grease.specs}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="greaseType">Grease Type</label>
         <input list="greaseType" name="greaseType" class="form-control" required>
         <datalist id="greaseType">
             {{#each values.grease.typeOfGrease}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row ">
    <div class="form-group col required">
        <label for="greaseCarBrand">Car Brand</label>
         <input list="greaseCarBrand" name="greaseCarBrand" class="form-control" required>
         <datalist id="greaseCarBrand">
             {{#each values.grease.carBrand}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="greaseCarYear">Car Year</label>
         <input list="greaseCarYear" name="greaseCarYear" class="form-control" required>
         <datalist id="greaseCarYear">
             {{#each values.grease.carYear}}
                <option value="{{this}}"></option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row">
    <div class="for-group col required">
        <label for="quantityGrease">Quantity</label>
        <input type="number" placeholder = "0" id="quantityGrease" name="quantityGrease" class="form-control" required>
    </div>
    <div class="form-group col required">
        <label for="quantityMinGrease">Minimum Quantity</label>
        <input type="number" placeholder = "0" id="quantityMinGrease" name="quantityMinGrease" class="form-control" required>
    </div>
    <div class="form-group col required">
        <label for="quantityMinGrease">Grease Price Per Liter</label>
        <input type="number" placeholder = "0" id="greasePrice" name="greasePrice" class="form-control" required>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <label for="quotation">Quotation Number</label>
        <input type="text" placeholder = "0" id="quotation" name="quotation" class="form-control">
    </div>
    <div class="form-group col">
        <label for="quotation">Select a File</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="upload" name="upload" accept="application/pdf, application/pdf">
            <label for="upload" class="custom-file-label">No File Choosen</label>
        </div>
    </div>
</div>
    