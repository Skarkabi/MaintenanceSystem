
<div class="container-fluid" style="
	display: flex; justify-content: center;
  	align-items: center;
	height: 100vh">
	<div class="row">
		
	</div>
	<h3 style="display: flex; justify-content:center; color:white;">Maintenance Department</h3>
	<div class="container  bg-white-box">
		<div class="px-2">
			<div class="row">
				<form action="/login" method="POST" class="justify-content">
					<div class="form-group" style="display: flex; justify-content:center; margin-bottom:50px">
						<h1 class="display-8 py-2 font-weight-bold">Login</h1>
					</div>
					<div class="form-floating  display-signin mb-3" style="display: flex; justify-content:center">
						<input type="text" name="fName" data-test="fName" id="fName" class="form-control" placeholder="Enter Username">
						<label for="fName">Username</label>
					</div>

					<div class="form-floating  display-signin" style="display: flex; justify-content:center;  margin-bottom:50px">
						<input type="password" id="lName" data-test="lName" name="lName" class="form-control" placeholder="Enter Password">
						<label for="lName">Password</label>
					</div>

					<div class="form-group mb-3" style="display: flex; justify-content:center">
						<small><a href="#">Forgot password?</a></small>
					</div>
					<div class="form-group mb-3" style="display: flex; justify-content:center">
						<button type="submit" id="login-btn" data-test="login-btn" class="btn btn-primary justfiy-content-end">Login</button>
					</div>
						
				</form>
				<div class="registration-errors">
					{{#if error}}
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
							{{#each error}}
								<div><small>{{this}}</small></div>
							{{/each}}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{{/if}}

					{{#if error_msg}}
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
							<small><strong>Error:</strong> {{error_msg}}</small>
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>	
						</div>
					{{/if}}
				</div>
			</div>		
		</div>
	</div>
</div>
	

<style>
	body {
		background-image: url('./images/sign-in.jpg');
	}
</style>