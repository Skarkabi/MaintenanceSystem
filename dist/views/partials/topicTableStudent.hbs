{{#each topics}}
    <hr>
    <a href={{ this.filePath }}><h1>{{ this.title }}</h1></a>
    <div>
        <div>
            <span style="margin: 5px auto auto 5px; font-size:18px; font-family: 'Nunito Sans', sans-serif;">{{ this.dateOfCreation }}</span>
            <br>
            <span style="margin: 5px auto auto 5px; font-size:24px; font-family: 'Nunito Sans', sans-serif;">{{ this.description }}</span>
        </div>
        {{#each this.materials}}
            <div>
                {{#if this.isOwnLink}}
                    <a href={{this.link}} style="margin: auto auto auto 20px; vertical-align: middle"><i class="material-icons" style="cursor: pointer; vertical-align: middle;">{{this.fileType}}</i>{{this.title}}</a>
                {{else}}
                    <a href="/courses/{{../../courseInstance}}/project/:{{this._id}}" style="margin: auto auto auto 20px; vertical-align: middle"><i class="material-icons" style="cursor: pointer; vertical-align: middle;">{{this.fileType}}</i>{{this.title}}</a>
                {{/if}}
            </div>
        {{/each}}
    </div>
{{/each}}