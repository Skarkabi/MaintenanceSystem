<div class="form-row">
    <div class="form-group col">
        <label for="batSpec">Battery Specs</label>
         
         <input list="batSpec"  name="batSpec" class="form-control">
         <datalist id="batSpec">
            {{#each values.batteries.specs}}
                <option value="{{this.batSpec}}"></option>
            {{/each}}
        </datalist>
    </div>
    <div class="form-group col ">
        <label for="carBrand">Car Brand</label>
         <input list="carBrand" name="carBrand" class="form-control" >
         <datalist id="carBrand">
             {{#each values.batteries.brands}}
                <option value="{{this.carBrand}}">{{this.spec}}</option>
            {{/each}}
        </datalist>
    </div>
</div>
<div class="form-row ">
    <div class="form-group col ">
        <label for="carBrand">Car Year</label>
         <input list="carYear" name="carYear" class="form-control">
         <datalist id="carYear">
             {{#each values.batteries.years}}
                <option value="{{this.carYear}}">{{this.spec}}</option>
            {{/each}}
        </datalist>
    </div>
    <div class="for-group col ">
        <label for="quantityBatteries">Quantity</label>
        <input type="number" placeholder = "0" id="quantityBatteries" name="quantityBatteries" class="form-control">
    </div>
    <div class="for-group col ">
        <label for="quantityMinBatteries">Minimum Quantity</label>
        <input type="number" placeholder = "0" id="quantityMinBatteries" name="quantityMinBatteries" class="form-control">
    </div>
</div>    