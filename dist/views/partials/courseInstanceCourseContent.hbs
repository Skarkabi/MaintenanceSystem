{{!-- Course Content --}}
<div class="course-section-wrapper">
	<div class="section-title">
		<h4><i class="fas fa-book-reader"></i> Course Content</h4>
		<hr class="my-3">
	</div>
	<div class="section-content">

		{{#if user.professor}}
			{{#each topics}}
				<div style="float: right;">
					<form id="deleteForm" action="/courses/course/{{../id}}/topic/{{this._id}}/delete" method="POST"></form>					
					<button form="deleteForm" class="btn btn-danger" id="deleteTopic-{{this.title}}"><i class="far fa-trash-alt"></i> Delete</button>
					<!--<a class="btn btn-danger" role="button"><i class="far fa-trash-alt"></i> Delete</a>-->
					<a href="/courses/course/{{../id}}/topic/{{this._id}}/edit" class="btn btn-outline-dark" role="button"><i class="far fa-edit"></i> Edit</a>
				</div>
				<br>
				<div class="course-content">
					<a href="{{ this.filePath }}" id="topicTitle"><h5><b>{{ this.title }}</b></h5></a>
					<h6 style="float: right; color: #808080">{{ this.dateOfCreation }}</h6>
					<br>
					<p id="topicDescription">{{ this.description }}</p>
					<a href="{{ this.filePath }}"><i class="fas fa-file-alt"></i> {{ this.filePath }}</a>
				</div>
			{{/each}}
		{{else}}
			{{#if user.admin}}
				{{#each topics}}
					<div style="float: right;">
						<form id="deleteForm" action="/courses/course/{{../id}}/topic/{{this._id}}/delete" method="POST"></form>					
						<button form="deleteForm" class="btn btn-danger" id="deleteTopic-{{this.title}}"><i class="far fa-trash-alt"></i> Delete</button>
						<!--<a class="btn btn-danger" role="button"><i class="far fa-trash-alt"></i> Delete</a>-->
						<a href="/courses/course/{{../id}}/topic/{{this._id}}/edit" class="btn btn-outline-dark" role="button"><i class="far fa-edit"></i> Edit</a>
					</div>
					<br>
					<div class="course-content">
						<a href="{{ this.filePath }}" id="topicTitle"><h5><b>{{ this.title }}</b></h5></a>
						<h6 style="float: right; color: #808080">{{ this.dateOfCreation }}</h6>
						<br>
						<p id="topicDescription">{{ this.description }}</p>
						<a href="{{ this.filePath }}"><i class="fas fa-file-alt"></i> {{ this.filePath }}</a>
					</div>
				{{/each}}	
			{{else}}
				{{#each topics}}
					<br>
					<div class="course-content">
						<a href="{{ this.filePath }}" id="topicTitle"><h5><b>{{ this.title }}</b></h5></a>
						<h6 style="float: right; color: #808080">{{ this.dateOfCreation }}</h6>
						<br>
						<p id="topicDescription">{{ this.description }}</p>
					</div>
				{{/each}}
			{{/if}}	
		{{/if}}
	</div>
</div>