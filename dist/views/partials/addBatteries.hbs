<div class="form-row">
    <div class="form-group col required">
        <label for="batSpec">Battery Specs</label>
         <input list="batSpec"  name="batSpec" class="form-control" required>
         <datalist id="batSpec">
            {{#each values.batteries.specs}}
                <option value="{{this.batSpec}}"></option>
            {{/each}}
        </datalist>
    </div>
     <div class="form-group col required">
        <label for="batteriesSupplierName">Supplier Name</label>
         <select type="text" id="batteriesSupplierName" name="batteriesSupplierName" class="form-control" required="required">
             {{#each values.supplier}}
                <option value="{{this.id}}">{{this.name}}</option>
             {{/each}}       
        </select>
    </div>
</div>
<div class="form-row ">
    <div class="form-group col required">
        <label for="carBrand">Car Brand</label>
         <input list="carBrand" name="carBrand" class="form-control" required>
         <datalist id="carBrand">
             {{#each values.batteries.brands}}
                <option value="{{this.carBrand}}">{{this.spec}}</option>
            {{/each}}
        </datalist>
    </div>
    <div class="form-group col required">
        <label for="carBrand">Car Year</label>
         <input list="carYear" name="carYear" class="form-control" required>
         <datalist id="carYear">
            <option value={{this.carYear}}>{{this.spec}}</option>
        </datalist>
    </div>
</div>
<div class="form-row ">
    <div class="for-group col required">
        <label for="quantityBatteries" >Quantity</label>
        <input type="number" placeholder = "0" id="quantityBatteries" name="quantityBatteries" class="form-control" required>
    </div>
    <div class="form-group col required">
        <label for="quantityMinBatteries">Minimum Quantity</label>
        <input type="number" placeholder = "0" id="quantityMinBatteries" name="quantityMinBatteries" class="form-control" required>
    </div>
    <div class="form-group col required">
        <label for="batteryPrice">Price</label>
        <input type="number" placeholder = "0" id="batteryPrice" name="batteryPrice" class="form-control" required>
    </div>
</div>    
<div class="form-row">
    <div class="for-group col ">
        <label for="quotation">Quotation Number</label>
        <input type="text" placeholder = "0" id="quotation" name="quotation" class="form-control">
    </div>
    <div class="form-group col">
        <label for="quotation">Select a File</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="upload" name="upload" accept="application/pdf, application/pdf">
            <label for="upload" class="custom-file-label">No File Choosen</label>
        </div>
    </div>
</div>