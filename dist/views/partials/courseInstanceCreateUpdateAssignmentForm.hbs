<form method="POST" action="
	{{#if updateAssignmentAction}}
		{{updateAssignmentAction}}
	{{else}}
		/courses/create-assignment/{{id}}
	{{/if}}
">
	<input type="hidden" class="form-control" id="instance" name="instance" readonly value="{{id}}">
	<div class="form-group required">
		<label for="assignmentTitle">Title</label>
		<input type="text" class="form-control" id="assignmentTitle" name="assignmentTitle" required value="{{existingAssignment.assignmentTitle}}">
	</div>
	<div class="form-group">
		<label for="assignmentDescription">Description</label>
		<textarea class="form-control" id="assignmentDescription" name="assignmentDescription" rows="3">{{existingAssignment.assignmentDescription}}</textarea>
	</div>
	<div class="form-row">
		<div class="form-group col required">
			<label for="assignmentPercentage">Percentage</label>
			<input type="number" min="0" max="100" class="form-control" id="assignmentPercentage" name="assignmentPercentage" required value="{{existingAssignment.assignmentPercentage}}">
		</div>
		<div class="form-group col required">
			<label for="assignmentMaxGrade">Max Grade</label>
			<input type="number" min="0" max="100" class="form-control" id="assignmentMaxGrade" name="assignmentMaxGrade" required value="{{existingAssignment.assignmentMaxGrade}}">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col required">
			<label for="assignmentStartDate">Start Date</label>
			<input type="datetime-local" name="assignmentStartDate" id="assignmentStartDate" class="form-control" required value="{{existingAssignment.assignmentStartDate}}">
		</div>
		<div class="form-group col required">
			<label for="assignmentDueDate">Due Date</label>
			<input type="datetime-local" name="assignmentDueDate" id="assignmentDueDate" class="form-control" required value="{{existingAssignment.assignmentDueDate}}">
		</div>
	</div>
	<div class="pull-right">
		{{#if cancelButtonLink}}
			<a href="{{cancelButtonLink}}" role="button" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
		{{else}}
			<button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Cancel</button>
		{{/if}}
		<button type="submit" class="btn btn-primary" id="createAssignment-btn"><i class="far fa-save"></i> {{#if submitButtonTex}}{{submitButtonTex}}{{else}}Create{{/if}}</button>
	</div>
</form>