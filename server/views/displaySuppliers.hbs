<div class="col-md-12">
    <div class="table-buttons" id="table-buttons">
        <a href="/suppliers/register" role="button" class="btn btn-outline-dark" id="create-new"><i class="fas fa-plus"></i> Register New Supplier</a>
    </div>
</div>
{{!-- Displays all users --}}
<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Supplier Name</th>
                <th scope="col">Phone #</th>
                <th scope="col">Email</th>
                <th scope="col">Category</th>
                <th scope="col">Brand</th>
                <th scope="col" style="width: 18%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each suppliers}}
                <tr>
                    <td><a href="/suppliers/display-supplier/{{this.id}}" id="supplierId-{{this.id}}"> {{counter @index}}</a></td>
                    <td><a href="/suppliers/display-supplier/{{this.id}}" id="supplierId-{{this.id}}">{{this.name}}</a></td>
                    <td><a href="/suppliers/display-supplier/{{this.id}}">{{this.phone}}</a></td>
                    <td><a href="/suppliers/display-supplier/{{this.id}}">{{this.email}}</a></td>
                    <td><a href="/suppliers/display-supplier/{{this.id}}">{{this.category}}</a></td>
                    <td><a href="/suppliers/display-supplier/{{this.id}}">{{this.brand}}</a></td>
                    <td class = "table-actions">
                        <a href="/suppliers/display-supplier/{{this.id}}" role="button"  id="view" class="button"><i class="fas fa-user-alt" aria-hidden="true"></i> View</a>
                       <a href="/suppliers/delete/{{this.id}}" role="button" id="delete" class="delete"data-confirm="Are you sure to delete Employee ID# {{this.id}}?"><i class="fas fa-trash" aria-hidden="true"></i> Delete</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    function deleteUser(id){
        if(confirm("Are you sure you want to delete this user?")){
            window.location.href = "users/delete/" + id;
        }
    }
</script>
