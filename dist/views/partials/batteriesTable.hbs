<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Battery Spec</th>
                <th scope="col">Car Brand</th>
                <th scope="col">Car Year</th>
                <th scope="col">Quantity (Boxes)</th>
                <th scope="col">Action</th>

            </tr>
        </thead>
        <tbody>
            {{console consumables}}
            {{#if (isdefined page "view")}}
                {{#each consumables}}
                <tr>
                    <th>{{counter @index}}</th>
                    <td>{{this.batSpec}}</th>
                    <td>{{this.carBrand}}</td>
                    <td>{{this.carYear}}</td>
                    <td>{{this.quantity}}</td>
                    <td class = "table-actions">
                        <div class="input-group">
                            <input type="number" id="tableBatteryQuantity-{{this.id}}" name="tableBatteryQuantity-{{this.id}}" class="form-control" placeholder="Quantity" aria-label="Quantity" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button type="submit" id="updateBattery-{{this.id}}" name="updateBatter-{{this.id}}" class="btn btn-success" onclick="updateBatteryPost({{this.id}})"><i class="fas fa-plus-circle"></i></button>
                                <button type="submit" id="updateBattery-{{this.id}}" name="updateBatter-{{this.id}}" class="btn btn-danger" onclick="updateBatteryPost({{this.id}})"><i class="fas fa-minus-circle"></i></button>
                            </div>
                        </div>
                    </td>  

                </tr>
                {{/each}}
            {{/if}}

            {{#if (isdefined page "add")}}
                {{#each values.batteries.consumable}}
                <tr>
                    <th>{{counter @index}}</th>
                    <td>{{this.batSpec}}</th>
                    <td>{{this.carBrand}}</td>
                    <td>{{this.carYear}}</td>
                    <td>{{this.quantity}}</td>
                    <td class = "table-actions">
                        <div class="input-group">
                            <input type="number" id="tableBatteryQuantity-{{this.id}}" name="tableBatteryQuantity-{{this.id}}" class="form-control" placeholder="Quantity" aria-label="Quantity" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button type="submit" id="updateBattery-{{this.id}}" name="updateBatter-{{this.id}}" class="btn btn-success" onclick="addBatteryPost({{this.id}})"><i class="fas fa-plus-circle"></i></button>
                                <button type="submit" id="updateBattery-{{this.id}}" name="updateBatter-{{this.id}}" class="btn btn-danger" onclick="deleteBatteryPost({{this.id}})"><i class="fas fa-minus-circle"></i></button>
                            </div>
                        </div>
                    </td>  
                </tr>
                {{/each}}
            {{/if}}
            
        </tbody>
    </table>
</div>

<script>
    function addBatteryPost(id){
        console.log("In the battery");
        document.getElementById("tableBatteryQuantity-" + id).name = "newQuantity";
        document.getElementById("mainForm").action = "update-battery/add/" + id;
    }

     function deleteBatteryPost(id){
        console.log("In the battery");
        document.getElementById("tableBatteryQuantity-" + id).name = "newQuantity";
        document.getElementById("mainForm").action = "update-battery/delet/" + id;
    }
    
</script>